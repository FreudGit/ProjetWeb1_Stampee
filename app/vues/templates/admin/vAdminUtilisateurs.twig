<script>history.pushState({}, '', 'admin?entite={{ entite }}')</script>
<script type="module" src="js/filtrer.js"></script>
<section>
  <h1>{{ titre|upper }}</h1>
  <input id="filtrer" data-filtre="filtreUtilisateurs" value="" placeholder="Filtrage des lignes contenant cette chaîne">
  <a href="admin?entite={{ entite }}&action=a">Ajouter un utilisateur</a>
  <p class="messageRetourAction {{ classRetour }}">{{ messageRetourAction|raw }}&nbsp;</p>   
  <div class="g {{ entite }}">
    <div class="t">Id            <img src="assets/images/i-asc.svg"><img src="assets/images/i-desc-a.svg"></div>
    <div class="t">Nom, Prénom   <img src="assets/images/i-asc.svg"><img src="assets/images/i-desc.svg"></div>
    <div class="t">Courriel      <img src="assets/images/i-asc.svg"><img src="assets/images/i-desc.svg"></div>
    <div class="t">Profil        <img src="assets/images/i-asc.svg"><img src="assets/images/i-desc.svg"></div>
    <div class="t">Renouveler mdp<img src="assets/images/i-asc.svg"><img src="assets/images/i-desc.svg"></div>
    <div class="t">Actions</div>
  {% for utilisateur in utilisateurs %}
    <div class="l">
      <div class="c dr">{{ utilisateur.utilisateur_id }}</div>
      <div class="c   ">{{ utilisateur.utilisateur_nom }}, {{ utilisateur.utilisateur_prenom }}</div>
      <div class="c   ">{{ utilisateur.utilisateur_courriel }}</div>
      <div class="c   ">{{ utilisateur.utilisateur_profil }}</div>
      <div class="c mi">{{ utilisateur.utilisateur_renouveler_mdp }}</div>
      <div class="c   ">
        <a href="admin?entite={{ entite }}&action=m&id={{ utilisateur.utilisateur_id }}">modifier</a>
        <span class="confirmer" data-href="admin?entite={{ entite }}&action=s&id={{ utilisateur.utilisateur_id }}">supprimer</span>
        <a href="admin?entite={{ entite }}&action=generer_mdp&id={{ utilisateur.utilisateur_id }}">générer mdp</a>
      </div>
    </div>
  {% endfor %} 
  </div>
</section>
{{ include("admin/modaleSuppression.twig") }}